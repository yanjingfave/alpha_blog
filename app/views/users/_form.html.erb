<% if @user.errors.any? %>
<h2>Errors:</h2>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account") %>
<% end %>

<%= link_to 'Back to previous', articles_path %>