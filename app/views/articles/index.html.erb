<h1>Article List</h1>
<p>
    <%= link_to "Create new artilce",new_article_path %>
</p>
<table>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Created by:</th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= article.user.username + "," if article.user %> <%= time_ago_in_words(article.created_at ) %> ago<p>last updated: <%= time_ago_in_words(article.updated_at) %>  ago</p></td>
            <td><%= link_to 'Edit',  edit_article_path(article) %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>